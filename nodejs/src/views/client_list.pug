extends ./main

block content 
    div.container
        h2 #{title}
        if msg == 1
            div.alert.alert-success Cliente cadastrado com Sucesso! 
        if msg == 2
            div.alert.alert-danger Não foi possível cadastrar o Cliente
        if msg == 3
            div.alert.alert-success Cliente Alterado cadastrado com Sucesso! 
        if msg == 4
            div.alert.alert-danger Não foi possível alterar o Cliente!
        if msg == 5
            div.alert.alert-danger Cliente removido com sucesso!
        if msg == 6
            div.alert.alert-danger Não foi possivel remover o cliente!

        table.table.table-bordered 
            thead 
                tr 
                    th Nome 
                    th Cnpj 
                    th Telefone 
                    th Email 
                    th Contato 
                    th Ações 
            tbody 
                each client in clients
                    tr 
                        td= client.cliente 
                        td= client.cnpj 
                        td= client.telefone 
                        td= client.email 
                        td= client.contato
                        td 
                            a(href="/client/edit/" + client.id, class="btn btn-info") Editar 
                            form(
                                method="POST",
                                action="/client/" + client.id + "?_method=DELETE",
                                style="display:inline-block")
                                input(type="hidden", name="_method", value="DELETE")
                                button.btn.btn-danger(type="submit") Delete
                
